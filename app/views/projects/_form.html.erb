<%= form_with(model: project) do |form| %>
  <% if project.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>
      <ul>
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-10 project_title">
    <%= form.label "Project Title", class:"block mb-2 ml-1 text-xs font-bold uppercase text-gray-500" %>
    <div class="pt-0 mb-3">
      <%= form.text_field :title, class:"relative w-full px-3 py-2 text-sm placeholder-gray-200 transition duration-200 bg-white border border-gray-300 border-solid rounded-md outline-none focus:ring-lightBlue-500 focus:ring-1 focus:border-lightBlue-500", placeholder: "Add a project title", focus: true, required: true %>
    </div>
  </div>

  <div class="relative inline-block mb-10 project_status">
    <%= form.label "Project status", class:"block mb-2 ml-1 text-xs font-bold uppercase text-gray-500" %>
    <%#= form.select :status, Project.statuses.keys.map { |status| [status.humanize, status] } %>
    <%= form.select :status, Project.statuses.keys.map { |status| [status.humanize, status] }, {}, class: "w-full text-sm bg-white rounded-md py-2 px-4 border border-gray-300 shadow-md focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500 focus:outline-none" %>
  </div>

  <div>
    <%= form.submit class:"inline-flex items-center justify-center w-full h-12 px-6 font-medium tracking-wide text-white transition duration-200 bg-indigo-400 rounded shadow-md md:w-auto hover:bg-indigo-700 focus:shadow-outline focus:outline-none" %>
  </div>
<% end %>